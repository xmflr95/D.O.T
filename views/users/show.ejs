<!-- views/users/show -->
<!DOCTYPE html>
<html>

<head>
    <% include ../partials/head %>

    <style>
        body {
            background-color: rgb(225, 228, 235);
        }
        .container {
            margin-top: 4.5em;
        }
        .user {
            max-width: 420px;
        }
        
        .un {
            color: #495057;
        }
        
        .user-form {
            margin-top: 2em;
        }
        
        .buttons {
            width: 100%;
        }
        
        .back{
            position: fixed;
            z-index: 2;
            left: 1.5em;
        }
        
        .edit {
            position: fixed;
            z-index: 2;
            left: 5.7em;
        }
        
        @media (min-width: 992px) {
            .container {
                margin-top 8em;
                transform: scale(1.2);
            }
        }
    </style>
</head>

<body>
    <% include ../partials/nav %>

    <div class="buttons">
        <a class="btn btn-secondary back" href="/posts">Back</a>
        <% if(isAuthenticated && currentUser.id == user.id){ %>
        <a class="btn btn-secondary edit" href="/users/<%= user.username %>/edit">Edit</a>
        <% } %> 
    </div>

    <div class="container user user-show">
        <br>
        <form class="user-form form-horizontal" action="/users" method="post">
            <div class="contentBox">
                <h3 class="contentBoxTop">
                    Username : <b class="un"><%= user.username %></b>
                </h3>
                <br>
                <fieldset disabled>
                    <div class="form-group">
                        <label for="name" class="col-sm-3">Name</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" id="name" name="name" value="<%= user.name %>">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-sm-3">Email</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" id="email" name="email" value="<%= user.email %>">
                        </div>
                    </div>
                </fieldset>
            </div>
        </form>

    </div> <!-- container end -->
</body>

</html>
