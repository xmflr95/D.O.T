<!-- views/users/new.ejs -->
<!DOCTYPE html>
<html>

<head>
    <% include ../partials/head %>

    <link rel="stylesheet" href="/css/adduser.css">
</head>

<body>
    <div class="container">
        <form class="form-signin" action="/users" method="post">
            <h2 class="form-signin-heading">회원가입</h2>
            <div class="form-group <%= (errors.username)?'has-error':'' %>">
                <label class="ep" for="inputUsername">Username</label>
                <input type="text" id="inputUsername" name="username" class="form-control" placeholder="Username" required autofocus>
                <% if(errors.username){ %>
                <div class="alert alert-warning">
                    <%= errors.username.message %></div>
                <% } %>
            </div>
            <div class="form-group <%= (errors.name)?'has-error':'' %>">
                <label class="ep" for="inputName">Name</label>
                <input type="text" id="inputName" name="name" class="form-control" placeholder="Name" required>
                <% if(errors.name){ %>
                <div class="alert alert-warning">
                    <%= errors.name.message %></div>
                <% } %>
            </div>
            <div class="form-group <%= (errors.email)?'has-error':'' %>">
                <label class="ep" for="inputEmail">Email</label>
                <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required>
                <% if(errors.email){ %>
                <span class="help-block">
                    <%= errors.email.message %></span>
                <% } %>
            </div>
            <div class="form-group <%= (errors.password)?'has-error':'' %>">
                <label class="ep" for="inputPassword">Password</label>
                <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
                <% if(errors.password){ %>
                <div class="alert alert-warning">
                    <%= errors.password.message %></div>
                <% } %>
            </div>
            <div class="form-group <%= (errors.passwordConfirmation)?'has-error':'' %>">
                <label class="ep" for="passwordConfirmation">Password Confirmation*</label>
                <input type="password" id="passwordConfirmation" name="passwordConfirmation" class="form-control" placeholder="Password" required>
                <% if(errors.passwordConfirmation){ %>
                <div class="alert alert-warning">
                    <%= errors.passwordConfirmation.message %></div>
                <% } %>
            </div>

            <button class="btn btn-lg btn-primary btn-block" type="submit">회원가입</button>
            <% if(errors.unhandled){ %>
            <div class="alert alert-danger">
                <%= errors.unhandled %>
            </div>
            <% } %>

            <p class="goLogin">이미 계정이 있다면 <a href="/login">로그인</a></p>
            <p class="goLogin"><a href="/">홈으로</a></p>
        </form>
    </div>

</body>

</html>
